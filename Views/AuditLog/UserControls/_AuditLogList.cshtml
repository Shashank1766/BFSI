@using BillingSystem.Model.CustomModel
@model List<AuditLogCustomModel>

<div class="form">
    <div class="table-responsive">
        @if (Model != null && Model.Count > 0)
        {
            WebGrid grid = new WebGrid(Model, ajaxUpdateContainerId: "gridContent");
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "table table-grid", headerStyle: "gridHead", footerStyle: "gridFooter", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow", columns: grid.Columns(
                                grid.Column("ID", header: "ID" , canSort: true),
                                grid.Column("UserId", header: "UserId" , canSort: true),
                                grid.Column("CreatedDate", header: "CreatedDate" , canSort: true),
                                grid.Column("TableName", header: "TableName" , canSort: true),
                                grid.Column("FieldName", header: "FieldName" , canSort: true),
                                grid.Column("PrimaryKey", header: "PrimaryKey" , canSort: true),
                                grid.Column("OldValue", header: "OldValue" , canSort: true),
                                grid.Column("NewValue", header: "NewValue" , canSort: true),
                                grid.Column("PrimaryId", header: "PrimaryId" , canSort: true),
                                grid.Column("SecondaryId", header: "SecondaryId" , canSort: true),
                                grid.Column("EventType", header: "EventType" , canSort: true),
                                grid.Column("ExtValue1", header: "ExtValue1" , canSort: true),
                                grid.Column("ExtValue2", header: "ExtValue2" , canSort: true),
                                grid.Column("ExtValue3", header: "ExtValue3" , canSort: true),
                
                grid.Column(header: "Action", format: @<text>
                <a href="#" onclick="EditAuditLog('@item.AuditLogId')" style="float: left; margin-right: 7px; width: 15px;">
                    <img src="../images/edit.png" /></a>
                &nbsp;<a href="#" title="Delete" onclick="return DeleteAuditLog('@item.AuditLogId');" style="float: left; width: 15px;"><img src="../images/delete.png" /></a>
                </text>)
                                ));
            </div>            
        }
        else
        {

            <h2>No Record found</h2>
        }
    </div>
</div>
