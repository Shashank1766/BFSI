@if (Model != null && Model.Count > 0)
{
    <table class="table table-hover table-bordered" id="RejectedUsers">
        <thead>
            <tr class="">
                <th>User Name</th>
                <th>Firts Name</th>
                <th>Last Name</th>
                <th>Mobile Number</th>
                <th>Email Id</th>
                <th>Address</th>
                <th>Is Verfied</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        <p><strong>@item.FirstName</strong></p>
                    </td>
                    <td class="">@item.LastName</td>
                    <td class="">@item.MobileNumber</td>
                    <td class="">@item.MobileNumber</td>
                    <td class="">@item.Address</td>
                    <td class="">@item.Approved</td>
                    <td class="">@item.PasswordStr</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-orange-sm" onclick="EditUser('@item.Id');">Edit</button>
                        <button type="button" class="btn btn-sm btn-orange-sm" onclick="DeleteUser('@item.Id');">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No Record found</h2>
}
<script>
    $(function () {
        initTableWithSearch("#RejectedUsers", "#txtRejectedUsers");
    });

    
</script>